{
    "name": "loveduckie/silverstripe-markdown",
    "description": "A module for integrating Markdown support with Silverstripe content editing features.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS"
    ],
  "authors": [
    {
      "name": "Luc Shelton","email": "lucshelton@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/loveduckie/silverstripe-markdown/issues"
  },
    "license": "BSD-3-Clause",
    "require": {
        "silverstripe/framework": "^5.0",
        "silverstripe/admin": "^2.0",
        "michelf/php-markdown": "^2.0",
        "erusev/parsedown": "^1.7",
        "silverstripe/asset-admin": "^2.2",
        "cebe/markdown": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "silverstripe/standards": "^1",
        "phpstan/extension-installer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "LoveDuckie\\SilverStripe\\Markdown\\": "src/",
            "LoveDuckie\\SilverStripe\\Markdown\\Tests\\": "tests/php/"
        }
    },
    "extra": {
        "installer-name": "markdown",
        "expose": [
            "client/dist"
        ],
        "screenshots": []
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
